# Production Environment Variables
# Copy this to .env.local and fill in your actual values

# Application
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/village_machaan
POSTGRES_DB=village_machaan
POSTGRES_USER=village_machaan_user
POSTGRES_PASSWORD=your_secure_password_here

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here

# JWT Authentication
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# Supabase
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Payment Gateway
VITE_RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret_here

# Email Service
VITE_EMAILJS_SERVICE_ID=your_emailjs_service_id_here
VITE_EMAILJS_TEMPLATE_ID_CONFIRMATION=your_confirmation_template_id_here
VITE_EMAILJS_PUBLIC_KEY=your_emailjs_public_key_here
EMAIL_SERVICE_API_KEY=your_email_service_api_key_here

# Monitoring & Analytics
SENTRY_DSN=your_sentry_dsn_here
GOOGLE_ANALYTICS_ID=your_google_analytics_id_here
MIXPANEL_TOKEN=your_mixpanel_token_here

# Security
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# SSL/TLS
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PASSWORD=your_grafana_password_here

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=/app/logs/app.log

# CDN
CDN_URL=https://cdn.yourdomain.com
STATIC_ASSETS_URL=https://assets.yourdomain.com

# Backup
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# Performance
CACHE_TTL=300000
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30000

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_MONITORING=true
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_SSL_REDIRECT=true
